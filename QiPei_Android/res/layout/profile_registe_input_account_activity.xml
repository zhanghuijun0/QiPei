<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_user_info_background"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_height"
        android:background="@color/common_actionbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:gravity="center"
		    android:src="@drawable/ic_back"
		    android:paddingRight="15dp"
		    android:paddingLeft="15dp"
		    android:clickable="true"
		    android:background="@drawable/companyinfo_lable_back_selector"
		    android:onClick="onInputAccountBackClick"
		    />
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        style="@style/Widget.ActionbarTextView"
	        android:text="@string/profile_label_registe_account_layout_text"
	        android:gravity="center"/>	    
    </FrameLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:orientation="vertical" >
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:background="@drawable/profile_round_edittext"
		    android:gravity="left"
		    android:orientation="horizontal">
	        <TextView
	            android:id="@+id/profile_registe_input_account_left"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="15dp"
	            android:text="@string/profile_label_registe_account_input_text"
	            android:textSize="18sp"/>
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
		        android:layout_gravity="center_vertical">
		        <ImageButton
	                android:id="@+id/ibtn_input_account_delusername"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_gravity="center_vertical"
	                android:background="#00000000"
	                android:onClick="onDelUserNameClick"
	                android:paddingLeft="5dp"
	                android:paddingRight="10dp"
	                android:scaleType="fitCenter"
	                android:src="@drawable/common_editor_del_selector"
	                android:visibility="invisible" />
		        <EditText
		            android:id="@+id/profile_registe_input_account"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_toLeftOf="@id/ibtn_input_account_delusername"
		            android:textSize="18sp"
		            android:inputType="phone"
		        	android:hint="@string/profile_hint_registe_account_input_text"
		            android:background="#00000000"/>
		     </RelativeLayout>
	    </LinearLayout>
	    <Button
	        android:id="@+id/profile_input_account_next"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:padding="10dp"
	        android:textSize="@dimen/profile_first_title_font_size"
	        android:textColor="@color/common_activity_bg"
	        android:background="@drawable/profile_login_button_selecter"
	        android:text="@string/profile_label_next_text"
	        android:onClick="onInputAccountNextClick"/>
	    <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:orientation="horizontal">
	        <CheckBox
	            android:id="@+id/profile_registe_agree"
	            android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:button="@null"
		        android:checked="true"
		    	android:background="@drawable/profile_agree_status"/>
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textSize="15sp"
	            android:text="@string/profile_label_registe_choose_agree_text"
		    	/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
