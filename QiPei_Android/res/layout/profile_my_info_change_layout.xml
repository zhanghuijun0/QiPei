<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_activity_bg"
    android:orientation="vertical" >
    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/common_actionbar_height"
	    android:background="@color/common_actionbar_bg">			
        <TextView
            android:id="@+id/profile_change_name_type_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/Widget.ActionbarTextView"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:background="@drawable/companyinfo_lable_back_selector"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:onClick="onBackClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_save_button_text"
            android:textColor="@color/common_activity_bg"
            android:background="@drawable/profile_save_button_selector"
            android:layout_gravity="right|center_vertical"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:onClick="onProfileSaveChangeClick"/>
	</FrameLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="10dp"
	    android:orientation="vertical" >                                    
	    <EditText
	        android:id="@+id/profile_my_info_change_new_company_name"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/profile_edittext_focus_effect"
		    android:gravity="left|top"
	    	android:paddingLeft="10dp"
	    	android:paddingRight="10dp"
	    	android:minLines="5"
	    	android:minHeight="150dp"
	    	android:inputType="textMultiLine"
	    	/>
	</LinearLayout>
</LinearLayout>
