<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/common_deep_gray_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/common_gray_color"
        android:minHeight="80dp"
        android:padding="20dp"
        android:textColor="@color/common_activity_bg"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_textView"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_button_selector"
            android:padding="15dp"
            android:singleLine="true"
            android:layout_marginRight="1dp"
            android:textColor="@color/common_activity_bg"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dialog_sure_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_button_selector"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/common_activity_bg"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>