<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants" >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/siv_news_media_header_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_banner_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_news_media_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/siv_news_media_header_image"
            android:layout_centerHorizontal="true"
            android:background="@color/common_banner_textview_bg"
            android:drawableLeft="@drawable/news_media_play"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/common_banner_title_text_color"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>