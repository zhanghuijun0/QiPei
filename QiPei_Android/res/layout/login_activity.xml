<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_activity_bg">
    <FrameLayout
        android:id="@+id/profile_login_framelayout"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/common_actionbar_height"
	    android:background="@color/common_actionbar_bg">			
        <TextView
            android:id="@+id/profile_change_name_type_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/profile_label_login"
            style="@style/Widget.ActionbarTextView"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:background="@drawable/companyinfo_lable_back_selector"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:onClick="onBackClick"/>
	</FrameLayout>
    <ScrollView
        android:id="@+id/profile_login_scrollview"
        style="@style/Widget.GammaScrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:layout_below="@id/profile_login_framelayout"
	    >
	    <RelativeLayout 
	        android:id="@+id/profile_login_scrollview_relativelayout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingLeft="15dp"
	    	android:paddingRight="15dp">
		    <ImageView
		        android:id="@+id/iv_login_photo"
		        android:layout_width="90dp"
		        android:layout_height="90dp"
				android:layout_marginTop="20dp"
		        android:layout_alignParentTop="true"
		        android:background="@color/common_photo_border_color"
		        android:padding="1dp"
		        android:layout_centerHorizontal="true"
		        android:scaleType="fitCenter"
			    android:src="@drawable/profile_login_photo" />
		    <LinearLayout
		        android:id="@+id/ll_login_loginbox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:layout_below="@id/iv_login_photo"
		        android:background="@drawable/ic_login_loginbox"
		        android:gravity="center"
		        android:orientation="vertical"
		        android:paddingTop="5dp" >
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		            <ImageButton
		                android:id="@+id/ibtn_login_delusername"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:layout_gravity="center_vertical"
		                android:background="#00000000"
		                android:onClick="onDelUserNameClick"
		                android:paddingLeft="5dp"
		                android:paddingRight="10dp"
		                android:scaleType="fitCenter"
		                android:src="@drawable/common_editor_del_selector"
		                android:visibility="invisible" />
		            <EditText
		                android:id="@+id/account"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dp"
		                android:layout_toLeftOf="@id/ibtn_login_delusername"
		                android:background="#00000000"
		                android:hint="@string/profile_hint_login_account"
		                android:padding="5dp"
		                android:inputType="phone"
		                android:singleLine="true" />
		        </RelativeLayout>
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="1px"
		            android:layout_marginBottom="10dp"
		            android:layout_marginTop="10dp"
		            android:background="#C9C9C9" />
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		            <ImageButton
		                android:id="@+id/ibtn_login_delpassword"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:layout_gravity="center_vertical"
		                android:background="#00000000"
		                android:onClick="onDelPasswordClick"
		                android:paddingLeft="5dp"
		                android:focusable="false"
		                android:paddingRight="10dp"
		                android:scaleType="fitCenter"
		                android:src="@drawable/common_editor_del_selector"
		                android:visibility="invisible" />
		            <EditText
		                android:id="@+id/password"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:layout_marginLeft="5dp"
		                android:layout_toLeftOf="@id/ibtn_login_delpassword"
		                android:background="#00000000"
		                android:inputType="textPassword"
		                android:hint="@string/profile_hint_login_password"
		                android:padding="5dp"
		                android:singleLine="true" />
		        </RelativeLayout>
		    </LinearLayout>
			<Button
		        android:id="@+id/loginButton"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:layout_marginBottom="20dp"
		        android:layout_below="@id/ll_login_loginbox"
		        android:background="@drawable/profile_login_button_selecter"
		        android:onClick="onLoginClick"
		        android:padding="10dp"
		        android:text="@string/profile_label_login"
		        android:textColor="@color/common_activity_bg"
		        android:textSize="@dimen/profile_first_title_font_size" />
		</RelativeLayout>
	</ScrollView>
	<RelativeLayout
        android:id="@+id/ll_login_register_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/profile_login_scrollview">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:gravity="center_horizontal"
        	android:layout_alignParentBottom="true"
	        android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/back_password"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/profile_textview_selcetor"
	            android:clickable="true"
	            android:onClick="onBackPasswordClick"
	            android:text="@string/profile_label_back_password" />
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:src="@drawable/profile_login_vertical_line" />
	        <TextView
	            android:id="@+id/register"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/profile_textview_selcetor"
	            android:clickable="true"
	            android:onClick="onRegisteClick"
	            android:text="@string/profile_label_register" />
	    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>