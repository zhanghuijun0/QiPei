<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_keyword_history_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_keyword_history_clock" />

    <ImageView
        android:id="@+id/iv_keyword_history_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_keyword_history_pick" />

    <TextView
        android:id="@+id/tv_keyword_history_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_keyword_history_pick"
        android:layout_toRightOf="@id/iv_keyword_history_clock"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="宝马汽车"
        android:textColor="#414141"
        android:textSize="18sp" />

</RelativeLayout>