<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#88000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp" >

    <Button
        android:id="@+id/btn_photo_choose_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_btn_blue_corner_selector"
        android:padding="10dp"
        android:text="拍照"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_photo_choose_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_btn_blue_corner_selector"
        android:padding="10dp"
        android:text="从手机相册里选择"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_photo_choose_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_btn_black_corner_selector"
        android:padding="10dp"
        android:text="取消"
        android:textColor="#F5F5F5"
        android:textSize="20sp" />

</LinearLayout>